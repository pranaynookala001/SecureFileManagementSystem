{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=SecureDocumentDB;Username=postgres;Password=securepass123"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters-for-security",
    "Issuer": "SecureDocumentAPI",
    "Audience": "SecureDocumentClient",
    "ExpirationHours": 1
  },
  "Security": {
    "PasswordPolicy": {
      "MinLength": 8,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireDigit": true,
      "RequireSpecialCharacter": true
    },
    "SessionTimeout": {
      "Web": 3600,
      "Mobile": 7200,
      "API": 1800
    },
    "RateLimiting": {
      "LoginAttempts": 5,
      "WindowMinutes": 15,
      "ApiRequests": 100,
      "ApiWindowMinutes": 1
    },
    "Encryption": {
      "Algorithm": "AES-256-GCM",
      "KeySize": 256
    }
  },
  "FileStorage": {
    "BasePath": "./uploads",
    "MaxFileSize": 104857600,
    "AllowedExtensions": [".pdf", ".doc", ".docx", ".txt", ".jpg", ".png", ".gif"]
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  }
}
